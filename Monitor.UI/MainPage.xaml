<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Monitor.UI"
             xmlns:blazor="clr-namespace:Monitor.UI.Blazor;assembly=Monitor.UI.Blazor"
             xmlns:shared="clr-namespace:Monitor.Shared;assembly=Monitor.Shared"
             x:Class="Monitor.UI.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type blazor:App}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>